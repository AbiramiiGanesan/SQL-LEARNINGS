----------------------SQL Table Creation Query-----------------

CREATE TABLE Employees (
    EmployeeID INT PRIMARY KEY,        // INTEGER
    Name VARCHAR(100),                 //VARCHAR
    Email VARCHAR(100) UNIQUE,        // VARCHAR(UNIQUE)
    Department VARCHAR(50),          //VARCHAR
    Salary DECIMAL(10,2),            //DECIMAL (10-DIGITS, 2-AFTER DOTS HOW MANY DIGITS TO COME)
    DateOfBirth DATE,                //DATE
    Gender VARCHAR(10),              //VARCHAR
    Bonus DECIMAL(10,2)            //DECIMAL 
);


